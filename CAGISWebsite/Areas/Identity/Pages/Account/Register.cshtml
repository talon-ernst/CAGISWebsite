@page "/Administration/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div id="RegisterPage">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" id="frmRegister" onsubmit="return TTLValidation();" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" id="txtUserName" class="form-control" />
                    <span id="txtUserName-error" asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" id="txtEmail" class="form-control" />
                    <span id="txtEmail-error" asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" id="txtPassword" class="form-control" />
                    <span id="txtPassword-error" asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" id="txtConfirmPassword" class="form-control" />
                    <span id="txtConfirmPassword-error" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" id="btnSubmitUser" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    <script src="~/js/TTLRegisterValidation.js" type="text/javascript"></script>
}
