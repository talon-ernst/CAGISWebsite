@model IEnumerable<CAGISWebsite.Models.Contests>

@{
    ViewData["Title"] = "Contests Page";
}
<div class="SearchEngine">
    <h1>Available Contest</h1>
</div>


<div class="ListPage">
    @foreach (var item in Model)
    {
        <a asp-controller="Contests" asp-action="Details" asp-route-id="@item.ContestId">

            <div class="row" id="EachBlog">

                <div class="eachcolumn" id="ListLeftColm">
                    @if (item.ContestImage == null)
                    {
                        <img class="eachImage" src="~/Images/WebsiteImages/Cagis_logo_colour.png" />
                    }
                    else
                    {
                        <img class="eachImage" src="@item.ContestImage.ImagePath" />
                    }
                </div>

                <div class="eachcolumn" id="ListRightColm">
                    <h1 class="eachTitle">@Html.DisplayFor(modelItem => item.ContestTitle)</h1>
                    <p class="eachDescription">End Date: @Html.DisplayFor(modelItem => item.ContestEditDate)</p>

                    @if (item.ContestText.Length >= 250)
                    {
                        <p class="eachDescription">@Html.DisplayTextFor(modelItem => item.ContestText).Substring(0, 250) ...</p>
                    }
                    else
                    {
                        <p class="eachDescription">@Html.DisplayFor(modelItem => item.ContestText)</p>
                    }

                    <p>Click to view more</p>
                </div>

            </div>
        </a>
    }
</div>

