@model IEnumerable<CAGISWebsite.Models.Activities>

@{
    ViewData["Title"] = "Activities Page";
}

<h1>Please Select An Activity: </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Activity Title</p>
            </th>
            <th>
               <p>Activity Text</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityText)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ActivityId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
