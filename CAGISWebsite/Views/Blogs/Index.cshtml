@model IEnumerable<CAGISWebsite.Models.Blogs>

@{
    ViewData["Title"] = "Blogs Page";
}

<h1>Please Select A Blog: </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Blog Title</p>
            </th>
            <th>
                <p>Blog Text</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
