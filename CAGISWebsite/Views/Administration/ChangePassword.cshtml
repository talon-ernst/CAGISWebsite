@model ChangePassword
@{
    ViewData["Title"] = "Change password";
}
<div id="changePasswordPage">
    <h4>@ViewData["Title"]</h4>
    <div class="row">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <input asp-for="UserId" hidden />
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input id="txtNewPassword" asp-for="NewPassword" class="form-control" />
                    <span id="txtNewPassword-error" asp-validation-for="NewPassword" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input id="txtConfirmPassword" asp-for="ConfirmPassword" class="form-control" />
                    <span id="txtConfirmPassword-error" asp-validation-for="ConfirmPassword" ></span>
                </div>
                <button type="submit" class="btn btn-primary" id="btnUpdatePassword">Update password</button>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/DSChangePasswordValidation.js" type="text/javascript"></script>
}