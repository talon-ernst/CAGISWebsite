@model CAGISWebsite.Models.Facts

@{
    ViewData["Title"] = "Create New Did You Know";
}

<h1 id="titleCreateDYK">Create New Did You Know</h1>

<h4>Did You Know</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dyktitle" class="control-label">Did You Know Title</label>
                <input asp-for="Dyktitle" class="form-control" />
                <span asp-validation-for="Dyktitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dyktext" class="control-label">Did You Know Text</label>
                <input asp-for="Dyktext" class="form-control" />
                <span asp-validation-for="Dyktext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllFacts">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
