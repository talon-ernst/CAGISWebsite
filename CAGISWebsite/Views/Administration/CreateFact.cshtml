@model CAGISWebsite.Models.Facts

@{
    ViewData["Title"] = "Create New Did You Know";
}

<h1 id="titleCreateDYK">@ViewData["Title"]</h1>

<h4>Did You Know</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFact" id="frmDYK" onsubmit="return TTLValidation('DYK');">
            <div class="form-group">
                <label asp-for="Dyktitle" class="control-label">Did You Know Title</label>
                <input asp-for="Dyktitle" id="txtDYKTitle" class="form-control" maxlength="50"/>
                <span id="txtDYKTitle-error" asp-validation-for="Dyktitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dyktext" class="control-label">Did You Know Text</label>
                <textarea asp-for="Dyktext" id="txtDYKText" class="form-control" rows="7" cols="250"></textarea>
                <span id="txtDYKText-error" asp-validation-for="Dyktext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="btnCreateDYK"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllFacts">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/TTLGeneralValidation.js" type="text/javascript"></script>
}
