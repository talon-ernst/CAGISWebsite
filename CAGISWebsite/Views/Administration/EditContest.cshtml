@model CAGISWebsite.Models.Contests

@{
    ViewData["Title"] = "Edit Contest";
}

<h1 id="titleEditContest">@ViewData["Title"]</h1>

<h4>Contests</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditContest" id="frmEditContest" onsubmit="return TTLValidation(true);">
            <input type="hidden" asp-for="ContestId" />
            <div class="form-group">
                <label asp-for="ContestTitle" class="control-label">Contest Title</label>
                <input asp-for="ContestTitle" id="txtContestTitle" class="form-control" />
                <span id="txtEditContestTitle-error" asp-validation-for="ContestTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContestText" class="control-label">Contest Description</label>
                <textarea asp-for="ContestText" id="txtContestText" class="form-control" rows="7" cols="250"></textarea>
                <span id="txtContestText-error" asp-validation-for="ContestText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" id="txtEmail" class="form-control" />
                <span id="txtEmail-error" asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContestStartDate" class="control-label">Start Date</label>
                <input asp-for="ContestStartDate" type="datetime-local" id="dateContestStart" class="form-control" />
                <span id="dateContestStart-error" asp-validation-for="ContestStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContestEndDate" class="control-label">End Date</label>
                <input asp-for="ContestEndDate" type="datetime-local" id="dateContestEnd" class="form-control" />
                <span id="dateContestEnd-error" asp-validation-for="ContestEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllContests">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/TTLContestValidation.js" type="text/javascript"></script>
}
