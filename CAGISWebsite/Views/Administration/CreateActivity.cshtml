@model CAGISWebsite.Models.Activities

@{
    ViewData["Title"] = "CreateActivity";
}

<h1>CreateActivity</h1>

<h4>Activities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateActivity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityTitle" class="control-label"></label>
                <input asp-for="ActivityTitle" class="form-control" />
                <span asp-validation-for="ActivityTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityText" class="control-label"></label>
                <input asp-for="ActivityText" class="form-control" />
                <span asp-validation-for="ActivityText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllActivites">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
