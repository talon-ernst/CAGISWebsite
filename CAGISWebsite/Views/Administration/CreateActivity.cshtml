@model CAGISWebsite.Models.Activities

@{
    ViewData["Title"] = "Create Activity";
}

<h1 id="titleCreateActivity">@ViewData["Title"]</h1>

<h4>Activities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateActivity" id="frmActivity" onsubmit="return TTLValidation('Activity');">
            <div class="form-group">
                <label asp-for="ActivityTitle" class="control-label">Activity Title</label>
                <input asp-for="ActivityTitle" id="txtActivityTitle" class="form-control" maxlength="50"/>
                <span id="txtActivityTitle-error" asp-validation-for="ActivityTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityText" class="control-label">Activity Description</label>
                <textarea asp-for="ActivityText" id="txtActivityText" class="form-control" rows="7" cols="250"></textarea>
                <span id="txtActivityText-error" asp-validation-for="ActivityText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="btnCreateActivity"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllActivities">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/TTLGeneralValidation.js" type="text/javascript"></script>
}
