@model CAGISWebsite.Models.Activities

@{
    ViewData["Title"] = "Edit " + Model.ActivityTitle;
}

<div id="EditActivityPage">
    <h1 id="TitleEditActivity">Edit Activity</h1>

<hr />
<div class="row">
    <div>
        @if (Model.ActivityImageId == null)
        {
            <img id="imgBlogImage" src="~/Images/WebsiteImages/Cagis_logo_colour.png" />
        }
        else
        {
            <img id="imgBlogImage" src="@Model.ActivityImage.ImagePath" height="150" width="200" />
        }
    </div>
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="EditActivity" id="frmEditActivity" onsubmit="return TTLValidation('Activity');">
            <input type="hidden" asp-for="ActivityId" />
            <input type="hidden" asp-for="ActivityUploadDate" />
            <input type="hidden" asp-for="ActivityImageId" value="@Model.ActivityImageId" />
            <div class="form-group">
                <label asp-for="ActivityTitle" class="control-label">Activity Title</label><br />
                <input asp-for="ActivityTitle" id="txtActivityTitle" class="form-control, col-md-4" maxlength="50" />
                <span id="txtActivityTitle-error" asp-validation-for="ActivityTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityText" class="control-label">Activity Description</label>
                <textarea asp-for="ActivityText" id="txtActivityText" class="form-control" rows="7" cols="250"></textarea>
                <span id="txtActivityText-error" asp-validation-for="ActivityText"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Upload Image</label><br />
                <input type="file" accept=".png,.jpg,.jpeg,.gif" name="file" id="imgImageUpload" class="form-control, col-md-4" onchange="TTLCheckImageExtension()" />
                <span id="imgImageUpload-error" asp-validation-for="ActivityImage"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" asp-route-activityStatus="EditActivity" class="btn btn-primary" />
                <input type="submit" id="btnRemoveImage" value="Remove Image" asp-route-activityStatus="ImageRemoval" class="btn btn-danger"
                       onclick="return confirm('This will permanently remove the image and become replaced with a placeholder. Are you sure you want to continue?')" />
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="AllActivities">Back to List</a>
    </div>

</div>

@section Scripts {
    <script src="~/js/TTLGeneralValidation.js" type="text/javascript"></script>
    <script src="~/js/TTLImageValidation.js" type="text/javascript"></script>
}
