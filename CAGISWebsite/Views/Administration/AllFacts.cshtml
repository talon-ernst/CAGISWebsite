@model IEnumerable<CAGISWebsite.Models.Facts>

@{
    ViewData["Title"] = "List of Facts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="CreateFact">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dyktitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dyktext)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dyktitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dyktext)
                </td>
                <td>
                    <a asp-action="EditFact" asp-route-id="@item.Dykid">Edit</a> |
                    <form asp-action="DeleteFact" onSubmit="return confirm('Are you sure you want to delete this?');">
                        <input type="submit" value="Delete" asp-route-id="@item.Dykid" class="btn btn-danger" /> |
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
