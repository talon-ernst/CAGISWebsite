    ViewData["Title"] = "CreateContest";
}

<h1>CreateContest</h1>

<h4>Contests</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateContest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContestTitle" class="control-label"></label>
                <input asp-for="ContestTitle" class="form-control" />
