            </div>
            <div class="form-group">
                <label asp-for="ContestStartDate" class="control-label"></label>
                <input asp-for="ContestStartDate" class="form-control" />
                <span asp-validation-for="ContestStartDate" class="text-danger"></span>
            </div>
